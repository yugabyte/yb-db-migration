#!/bin/sh

argv=( "$@" )

i=0
while [ $i -lt $# ]
do
    if [[ ${argv[${i}]} == "--export-dir" ]]
    then
        j=$(( $i + 1))
        vol="-v ${args[$j]}:/export-dir"
        args[$j]='/export-dir'
    fi
    i=$(( $i + 1))
done

dockerCmd="docker run ${vol} -it --network=host --rm --privileged localhost/yb-voyager:0.82 yb-voyager ${cmdToRun}"

echo $dockerCmd

$dockerCmd
