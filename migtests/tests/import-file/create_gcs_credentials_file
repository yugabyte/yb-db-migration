#creates a file while will be used by the migtests/tests/import-file/gcs/import_file.sh script
#to authenticate to the GCS bucket

set -e 
     

mkdir -p ~/.config/gcloud
touch ~/.config/gcloud/application_default_credentials.json


cat > ~/.config/gcloud/application_default_credentials.json << EOF 
{
"type": "authorized_user",
"client_id": $GCS_CLIENT_ID,
"client_secret": $GCS_CLIENT_SECRET,
"refresh_token": $GCS_REFRESH_TOKEN
}
EOF
    
