#!/usr/bin/env python3

import os
import sys
import fileinput

with open("pgconfig") as f:
    config_file=f.readline().strip(" \n")
os.remove("pgconfig")

with fileinput.input(config_file, inplace=True) as f:
    for line in f:
        new_line = line.replace("#ssl = off", "ssl = on")
        print(new_line, end='')