#!/usr/bin/env bash

set -e
set -x

source ${SCRIPTS}/functions.sh

echo "Assigning permissions to the validate filess"
chmod +x ${TEST_DIR}/validate

echo "Deleting existing data in target database"
run_sqlplus_as_schema_owner ${SOURCE_DB_NAME} ${TESTS_DIR}/oracle/utils/delete_full_schema

echo "Initialising source database & inserting data"
run_sqlplus_as_schema_owner ${SOURCE_DB_NAME} schema_and_data/hr_create
run_sqlplus_as_schema_owner ${SOURCE_DB_NAME} schema_and_data/hr_indexes
run_sqlplus_as_schema_owner ${SOURCE_DB_NAME} schema_and_data/hr_populate
run_sqlplus_as_schema_owner ${SOURCE_DB_NAME} schema_and_data/hr_trigger_procedure
